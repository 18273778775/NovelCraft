{
  "name": "@18273778775/novel-craft",
  "version": "1.2.0",
  "description": "AI驱动的智能小说润色系统 - 完整可用的CLI工具包",
  "main": "index.js",
  "bin": {
    "novel-craft": "./bin/novel-craft.js"
  },
  "files": [
    "bin/",
    "index.js",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "novel",
    "ai",
    "writing",
    "editing",
    "cli",
    "deepseek",
    "nestjs",
    "react",
    "typescript",
    "小说",
    "写作",
    "润色"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/18273778775/NovelCraft.git"
  },
  "author": {
    "name": "18273778775",
    "url": "https://github.com/18273778775"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/18273778775/NovelCraft/issues"
  },
  "homepage": "https://github.com/18273778775/NovelCraft#readme",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "pnpm run --recursive type-check",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "db:generate": "pnpm --filter backend db:generate",
    "db:push": "pnpm --filter backend db:push",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:studio": "pnpm --filter backend db:studio",
    "backend:dev": "pnpm --filter backend dev",
    "frontend:dev": "pnpm --filter frontend dev",
    "shared:build": "pnpm --filter shared build"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@playwright/test": "^1.53.2",
    "axios": "^1.6.5"
  }
}
